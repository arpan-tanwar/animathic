# Animathic Backend Environment Configuration
# Copy this file to .env and fill in your values

# Base Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Google Cloud Platform Configuration
GCP_PROJECT_ID=animathic-backend
GCP_REGION=us-central1
GCP_SERVICE_NAME=animathic-backend
GCP_MEMORY=2Gi
GCP_CPU=1
GCP_TIMEOUT=300
GCP_MAX_INSTANCES=10
GCP_MIN_INSTANCES=0
GCP_CONCURRENCY=80

# API Configuration
HOST=0.0.0.0
PORT=8080
CORS_ORIGINS=*,https://animathic.com,https://*.animathic.com

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Google AI Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_MODEL=gemini-2.0-flash-exp
GOOGLE_AI_TEMPERATURE=0.1
GOOGLE_AI_MAX_TOKENS=4096
GOOGLE_AI_TOP_P=0.8
GOOGLE_AI_TOP_K=40

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_BUCKET_NAME=animathic-media

# Database Configuration (if using)
DATABASE_URL=your_database_url_here
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Media Configuration
MEDIA_BASE_DIR=./media
MAX_FILE_SIZE=104857600
CLEANUP_INTERVAL=3600
RETENTION_HOURS=24

# Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_LOGGING=true
LOG_RETENTION_DAYS=30

# Feature Flags
ENABLE_ENHANCED_DATABASE=true
ENABLE_AI_ANIMATIONS=true
ENABLE_USER_MANAGEMENT=true
ENABLE_FILE_UPLOAD=true
ENABLE_RATE_LIMITING=true
